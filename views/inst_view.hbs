<html lang="en">
<head>
	<meta charset="utf-8">
	<title>ELM Test</title>
  <link href="/assets/css/bootstrap.css" rel="stylesheet" type="text/css"/>
</head>
<body>
  <div class="container">
    <h2>Institute List</h2>
		<button class="btn btn-success" data-toggle="modal" data-target="#myModalAdd">Add New</button>
    <table class="table table-striped" id="mytable">
      <thead>
        <tr>
          <th>Id</th>
          <th>Name</th>
          <th>Type</th>
          <th>Address</th>
          <th>City</th>
          <th>State</th>
          <th>Zip</th>
          <th>Country</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
         {{#each results}}
        <tr>
          <td>{{ inst_id }}</td>
          <td>{{ inst_name }}</td>
          <td>{{ inst_type  }}</td>
          <td>{{ inst_address }}</td>
          <td>{{ inst_city }}</td>
          <td>{{ inst_state }}</td>
          <td>{{ inst_zip }}</td>
          <td>{{ inst_country }}</td>
          <td>{{ inst_status }}</td>
          <td>
            <a href="javascript:void(0);" class="btn btn-sm btn-info edit" data-id="{{ inst_id }}" data-inst_name="{{ inst_name }}" data-inst_type="{{ inst_type }}" data-inst_address="{{ inst_address }}" data-inst_city="{{ inst_city }}" data-inst_state="{{ inst_state }}" data-inst_country="{{ inst_country }}" data-inst_zip="{{ inst_zip }}" data-inst_status="{{ inst_status }}">Edit</a>
            <a href="javascript:void(0);" class="btn btn-sm btn-danger delete" data-id="{{ inst_id }}">Delete</a>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

	<!-- Add New Institute Modal-->
	  <form action="/save" method="post">
        <div class="modal fade" id="myModalAdd" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
         <div class="modal-dialog" role="document">
           <div class="modal-content">
             <div class="modal-header">
               <h5 class="modal-title" id="exampleModalLabel">Add New Institute Info</h5>
               <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                 <span aria-hidden="true">&times;</span>
               </button>
             </div>
             <div class="modal-body">
               <div class="form-group">
                   <input type="text" name="inst_name" class="form-control" placeholder="Name" required>
               </div>

               <div class="form-group">
                   <input type="text" name="inst_type" class="form-control" placeholder="Type" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_address" class="form-control" placeholder="Address" required>
               </div>

               <div class="form-group">
                   <input type="text" name="inst_city" class="form-control" placeholder="City" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_state" class="form-control" placeholder="State" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_country" class="form-control" placeholder="Country" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_zip" class="form-control" placeholder="Zip" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_status" class="form-control" placeholder="Status" required>
               </div>
             </div>
             <div class="modal-footer">
               <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
               <button type="submit" class="btn btn-primary">Save</button>
             </div>
           </div>
         </div>
        </div>
	 </form>

	 <!-- Edit Institute Modal-->
   <form action="/update" method="post">
       <div class="modal fade" id="EditModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Edit Institute Info</h5>
              <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
            <div class="modal-body">
                             <div class="form-group">
                   <input type="text" name="inst_name" class="form-control inst_name" placeholder="Name" required>
               </div>

               <div class="form-group">
                   <input type="text" name="inst_type" class="form-control inst_type" placeholder="Type" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_address" class="form-control inst_address" placeholder="Address" required>
               </div>

               <div class="form-group">
                   <input type="text" name="inst_city" class="form-control inst_city" placeholder="City" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_state" class="form-control inst_state" placeholder="State" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_country" class="form-control inst_country" placeholder="Country" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_zip" class="form-control inst_zip" placeholder="Zip" required>
               </div>
               <div class="form-group">
                   <input type="text" name="inst_status" class="form-control inst_status" placeholder="Status" required>
               </div>
            </div>
            <div class="modal-footer">
              <input type="hidden" name="inst_id" class="inst_id">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button type="submit" class="btn btn-primary">Update</button>
            </div>
          </div>
        </div>
       </div>
  </form>

	 <!-- Delete Institue Modal-->
 	  <form id="add-row-form" action="/delete" method="post">
 	     <div class="modal fade" id="DeleteModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
 	        <div class="modal-dialog">
 	           <div class="modal-content">
 	               <div class="modal-header">
									 	<h5 class="modal-title" id="myModalLabel">Delete Institue Info</h5>
 	                  <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
 	               </div>
 	               <div class="modal-body">
												 <strong>Are You Sure To Delete This Data?</strong>
 	               </div>
 	               <div class="modal-footer">
									 		<input type="hidden" name="inst_id" class="form-control inst_id2" required>
 	                   	<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
 	                  	<button type="submit" class="btn btn-success">Delete</button> 
 	               </div>
 	      			</div>
 	        </div>
 	     </div>
 	 </form>

<script src="/assets/js/jquery-3.3.1.js"></script>
<script src="/assets/js/bootstrap.js"></script>
<script>
    $(document).ready(function(){
			//showing data to modal for edit record
      $('#mytable').on('click','.edit',function(){
        var inst_id = $(this).data('id');
        var inst_name = $(this).data('inst_name');
        var inst_type = $(this).data('inst_type');
        var inst_address = $(this).data('inst_address');
        var inst_city = $(this).data('inst_city');
        var inst_state = $(this).data('inst_state');
        var inst_country= $(this).data('inst_country');
        var inst_zip = $(this).data('inst_zip');
        var inst_status = $(this).data('inst_status');
        $('#EditModal').modal('show');
        $('.inst_name').val(inst_name);
        $('.inst_type').val(inst_type);
        $('.inst_address').val(inst_address);
        $('.inst_city').val(inst_city);
        $('.inst_state').val(inst_state);
        $('.inst_country').val(inst_country);
        $('.inst_zip').val(inst_zip);
        $('.inst_status').val(inst_status);
        $('.inst_id').val(inst_id);
      });
			//showing modal for delete record
			$('#mytable').on('click','.delete',function(){
        var inst_id = $(this).data('id');
        $('#DeleteModal').modal('show');
        $('.inst_id2').val(inst_id);
      });

    });
</script>
</body>
</html>
